<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:xsd="http://www.w3.org/2001/XMLSchema"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/jee
        http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <context:component-scan base-package="com.letv.boss.push.boss"/>

    <!-- jmx -->
    <context:mbean-server/>

    <!-- this bean must not be lazily initialized if the exporting is to happen -->
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter">
        <property name="beans">
            <map>
                <entry key="com.letv.boss.push:Threshold=packageGroupThreshold"
                       value-ref="packageGroupThreshold"/>
                <entry key="com.letv.boss.push:Threshold=businessBossThreshold"
                       value-ref="businessBossThreshold"/>
            </map>
        </property>
        <property name="server" ref="mbeanServer"></property>
    </bean>

    <!--注册端口 我使用的是9999 -->
    <bean id="registry" class="org.springframework.remoting.rmi.RmiRegistryFactoryBean"
          destroy-method="destroy">
        <property name="port" value="9998"/>
    </bean>
    <!--配置服务连接connector via rmi -->
    <bean id="serverConnector"
          class="org.springframework.jmx.support.ConnectorServerFactoryBean"
          depends-on="registry">
        <property name="objectName" value="connector:name=rmi"/>
        <property name="serviceUrl"
                  value="service:jmx:rmi:///jndi/rmi://127.0.0.1:9998/server"/>
        <property name="server" ref="mbeanServer"/>
        <property name="environment">
            <map>
                <entry key="jmx.remote.x.password.file">
                    <value>/letv/web/boss.letv.com/WEB-INF/classes/jmxremote.password</value>
                </entry>
                <entry key="jmx.remote.x.access.file">
                    <value>/letv/web/boss.letv.com/WEB-INF/classes/jmxremote.access</value>
                </entry>
            </map>
        </property>

    </bean>

    <!-- boss-push 放代码里面执行 -->
    <bean class="com.letv.boss.push.server.PushServer">
        <property name="scanPackages">
            <list>
                <value>com.letv.boss.push.boss</value>
            </list>
        </property>
        <property name="port">
            <value>9998</value>
        </property>
        <property name="cluster">
            <value>boss-cluster</value>
        </property>
    </bean>


</beans>